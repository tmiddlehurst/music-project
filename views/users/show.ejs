<h1 class = "userShowH1"> User Details </h1>

<h2>username: <%= user.username %></h2>

<h1 class = "userShowH1"> Favourites </h1>

<img src="<%=user.image%>">

<div class = "container"></div>
	<% for(var i = 0; i < user.bands.length; i++ ) { %>
		<% console.log(user.bands.length); %>
		<div class = "col-sm-6">		
			<div class = "card">

				<div class = "card-block">

					<h3 class = "card-title"><a href="/<%= user.bands[i].id %>"><%= user.bands[i].name %></a></h3>
					<img class="bandPic" src="<%= user.bands[i].image %>" style="width: 50rem;">
					<p class = "card-text">Genre(s): <%= user.bands[i].genre %></p>
					<p class = "card-text">Rating: <%= user.bands[i].rating %></p>

				</div>	
			</div>
		</div>
	<% } %>
</div>